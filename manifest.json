{
  "manifest_version": 2,
  "name": "Clubhouse Card Avatars",
  "description": "This extension shows people's avatars on each card instead of initials",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon128.png"
  },

  "icons": {
    "16":  "icon128.png",
    "48":  "icon128.png",
    "128": "icon128.png"
  },

  "permissions": [
    "activeTab",
    "webNavigation"
  ],

  "content_scripts": [
    {
      "matches": [
        "https://app.clubhouse.io/*"
      ],
      "css": [
        "style.css"
      ],
      "js": [
        "background.js"
      ],
      "run_at": "document_end"
    }
  ]
}
